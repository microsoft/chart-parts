{
	"name": "@markable/parent",
	"private": true,
	"scripts": {
		"precommit": "lint-staged",
		"clean": "lerna run clean",
		"build": "run-s build:libs build:docs",
		"build:libs": "lerna run build --stream",
		"build:docs": "lerna run build:docs --scope @markable/documentation --stream",
		"start:packages": "lerna run start --parallel --stream",
		"test:packages": "lerna run test --stream",
		"release:packages": "lerna run release --stream",
		"lint:packages": "tslint \"packages/{client,examples,renderers,processing,util}/*/src/**/*.ts*\"",
		"lint:docs": "tslint \"packages/documentation/src/**/*.ts*\"",
		"lint": "run-p lint:*",
		"unit_test": "jest --coverage",
		"test": "run-s lint build unit_test test:packages",
		"lerna:publish": "lerna --registry https://msrp-essex.pkgs.visualstudio.com/_packaging/essex-npm/npm/registry/ publish",
		"release": "run-s clean build lerna:publish release:packages",
		"start": "run-s build start:packages"
	},
	"devDependencies": {
		"@types/jest": "^23.3.1",
		"husky": "^0.14.3",
		"jest": "^23.6.0",
		"jest-html": "^1.4.0",
		"lerna": "^3.2.1",
		"lint-staged": "^7.2.2",
		"npm-run-all": "^4.1.3",
		"prettier": "^1.14.2",
		"ts-jest": "^23.1.4",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.14.0",
		"tslint-react": "^3.6.0",
		"typescript": "^3.0.1"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"useTabs": true
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"tslint --fix",
			"prettier --write",
			"git add"
		]
	},
	"workspaces": {
		"packages": [
			"packages/documentation",
			"packages/examples/*",
			"packages/renderers/*",
			"packages/processing/*",
			"packages/client/*",
			"packages/util/*"
		],
		"nohoist": [
			"**/@types/*",
			"**/@types/*/**",
			"**/@types/react-native",
			"**/@types/react-native/**",
			"**/@types/react-dom",
			"**/@types/react-dom/**",
			"**/react-native",
			"**/react-native/**",
			"**/react-native-svg",
			"**/react-native-svg/**",
			"**/react-dom",
			"**/react-dom/**",
			"@markable/examples-mobile/**",
			"@markable/documentation/**",
			"@markable/react-svg-renderer",
			"@markable/react-svg-renderer/**",
			"@markable/react-native-svg-renderer",
			"@markable/react-native-svg-renderer/**",
			"**/@markable/react-native-svg-renderer/**",
			"@markable/examples-web/**"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testMatch": [
			"**/__tests__/**/*.spec.ts(x|)"
		],
		"collectCoverageFrom": [
			"**/src/*.{ts,tsx}",
			"**/src/**/*.{ts,tsx}",
			"!**/src/**/*.d.ts",
			"!packages/examples/testdata/**",
			"!packages/documentation/**",
			"!**/__tests__/**"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/lib/"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"snapshotSerializers": [
			"jest-html"
		]
	},
	"resolutions": {
		"**/@types/react": "16.4.10"
	}
}
